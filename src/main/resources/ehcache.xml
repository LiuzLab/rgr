<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="true"
         monitoring="autodetect"
         dynamicConfig="true">

    <defaultCache
           maxEntriesLocalHeap="20"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="600"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"/>

    <cache name="org.hibernate.cache.internal.StandardQueryCache"
           maxEntriesLocalHeap="100"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="300"
           timeToIdleSeconds="0"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"/>

    <cache name="org.hibernate.cache.spi.UpdateTimestampsCache"
           maxEntriesLocalHeap="5000"
           eternal="true"/>


<!--    <cache name="ubc.pavlab.rdp.model.User"
           maxEntriesLocalHeap="20"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="0"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off">
    </cache>-->

    <cache name="ubc.pavlab.rdp.model.Taxon"
           maxEntriesLocalHeap="20"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="3600"
           timeToIdleSeconds="0"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"/>

    <cache name="ubc.pavlab.rdp.model.Role"
           maxEntriesLocalHeap="200"
           eternal="true"/>

    <cache name="ubc.pavlab.rdp.model.UserGene"
           maxEntriesLocalHeap="500"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="600"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"/>

    <cache name="ubc.pavlab.rdp.model.UserTerm"
           maxEntriesLocalHeap="100"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="600"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"/>

    <cache name="ubc.pavlab.rdp.model.Ortholog"
           maxEntriesLocalHeap="500"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="600"
           memoryStoreEvictionPolicy="LRU"
           transactionalMode="off"/>

    <!-- Special Query Caches -->

    <cache name="gene"
           maxEntriesLocalHeap="0"
           eternal="true"
           overflowToDisk="false"
           transactionalMode="off">
        <searchable>
            <searchAttribute name="geneId"/>
            <searchAttribute name="taxonId" expression="value.getTaxon().getId()"/>
            <searchAttribute name="name"/>
            <searchAttribute name="symbol"/>
            <searchAttribute name="aliases"/>
            <searchAttribute name="modificationDate"/>
        </searchable>
    </cache>

    <cache name="taxon-list"
           maxEntriesLocalHeap="10"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="3600"
           timeToIdleSeconds="0"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"/>

    <cache name="stats"
           maxEntriesLocalHeap="100"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="0"
           memoryStoreEvictionPolicy="LFU"
           transactionalMode="off"/>

    <cache name="chars"
           maxEntriesLocalHeap="100"/>
</ehcache>